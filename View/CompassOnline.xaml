<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlwaysInTarget.View.CompassOnline"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout BackgroundColor="Black">
        <Frame BackgroundColor="Blue"  Padding="12" CornerRadius="5" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Margin="5, 5, 5, 10">
            <Label Text="Compass online" TextColor="White" FontSize="20" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
        </Frame>

        <Frame BorderColor="Black" BackgroundColor="WhiteSmoke"  Padding="6" CornerRadius="5" Margin="5, 3, 5, 3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.0*"></ColumnDefinition>
                    <ColumnDefinition Width="2.0*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Entry Grid.Row="0" Grid.Column="0" x:Name="ePlaneType" FontSize="18" Text="{Binding PlaneType}" Placeholder="...plane..." Keyboard="Numeric" TextColor="Black" IsReadOnly="True" HorizontalTextAlignment="Center"/>
                <Picker x:Name="eSystem" Grid.Row="0" Grid.Column="1" FontSize="18" TextColor="Black" HorizontalTextAlignment="Center"
                        Title="...system..."    
                        ItemsSource="{Binding MeasureSystems}"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedSystem}" 
                        SelectedIndexChanged="System_SelectedIndexChanged"
                        TitleColor="red">
                </Picker>
            </Grid>
        </Frame>

        <GraphicsView x:Name="CompassView"
                      HeightRequest="360"
                      WidthRequest="360"/>

        <Frame BorderColor="Black" BackgroundColor="WhiteSmoke"  Padding="6" CornerRadius="5" Margin="5, 3, 5, 3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.0*"></ColumnDefinition>
                    <ColumnDefinition Width="2.0*"></ColumnDefinition>
                    <ColumnDefinition Width="2.0*"></ColumnDefinition>
                    <ColumnDefinition Width="2.0*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Text="Heading: " FontSize="18" TextColor="Black" Padding="6"/>
                <Entry Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" x:Name="eCompassHeading" Text="{Binding Course}" FontSize="18" Placeholder="...err..." Keyboard="Numeric" MaxLength="4" TextColor="Black" IsReadOnly="True" HorizontalTextAlignment="Center"/>

                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Text="Map hdg:" FontSize="18" TextColor="Black" Padding="6"/>
                <Entry Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" x:Name="eTrueCourse" Text="{Binding TrueCourse}" FontSize="18" Placeholder=" - - - " Keyboard="Numeric" MaxLength="6" TextColor="Black" HorizontalTextAlignment="Center"/>

                <Switch Grid.Row="1" Grid.Column="2" IsToggled="{Binding IsMapHeadingEnabled}" Toggled="SwitchMapHdgArrow"/>
            </Grid>
        </Frame>

        <Slider x:Name="HeadingSlider" 
                Minimum="0" Maximum="360"
                ValueChanged="HeadingSlider_ValueChanged"/>
    </VerticalStackLayout>
</ContentPage>