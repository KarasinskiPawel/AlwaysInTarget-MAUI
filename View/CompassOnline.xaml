<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlwaysInTarget.View.CompassOnline"
             Shell.NavBarIsVisible="False">

    <!-- ðŸ”¹ WspÃ³lne style dla caÅ‚ej strony -->
    <ContentPage.Resources>
        <!-- DomyÅ›lny wyglÄ…d ramek -->
        <Style TargetType="Frame">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderColor" Value="Black"/>
            <Setter Property="BackgroundColor" Value="WhiteSmoke"/>
        </Style>

        <!-- DomyÅ›lny wyglÄ…d labeli -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>

        <!-- DomyÅ›lny wyglÄ…d pÃ³l Entry -->
        <Style TargetType="Entry">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <!--<Setter Property="HeightRequest" Value="32"/>-->
        </Style>

        <!-- DomyÅ›lny wyglÄ…d Picker -->
        <Style TargetType="Picker">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="Black"/>
            <!--<Setter Property="HeightRequest" Value="32"/>-->
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout BackgroundColor="Black">

        <!-- NagÅ‚Ã³wek -->
        <Frame BackgroundColor="Blue" Padding="8" Margin="5,5,5,8">
            <Label Text="Flight director"
                   TextColor="White"
                   FontSize="20"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"/>
        </Frame>

        <!-- Typ samolotu i system -->
        <Frame>
            <Grid ColumnDefinitions="2*,2*">
                <Entry x:Name="ePlaneType"
                       Text="{Binding PlaneType}"
                       Placeholder="...plane..."
                       IsReadOnly="True"/>
                <Picker x:Name="eSystem"
                        Grid.Column="1"
                        Title="...system..."
                        ItemsSource="{Binding MeasureSystems}"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedSystem}"
                        SelectedIndexChanged="System_SelectedIndexChanged"
                        TitleColor="Red"/>
            </Grid>
        </Frame>

        <!-- Kompas -->
        <GraphicsView x:Name="CompassView"
                      HeightRequest="360"
                      WidthRequest="360"
                      Margin="0,4"/>

        <!-- Heading i Map HDG -->
        <Frame>
            <Grid ColumnDefinitions="2*,2*,2*,2*" RowDefinitions="Auto">
                <Label Text="Map HDG:" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="eTrueCourse"
                       Grid.Row="1" Grid.Column="1"
                       Text="{Binding TrueCourse}"
                       Placeholder=" - - - "/>
                <Switch Grid.Row="1" Grid.Column="2"
                        IsToggled="{Binding IsMapHeadingEnabled}"
                        Toggled="SwitchMapHdgArrow"/>
            </Grid>
        </Frame>

        <!-- Wind Correction Angle i Bombsight -->
        <Frame>
            <Grid ColumnDefinitions="2*,2*,2*,2*" RowDefinitions="Auto,Auto">
                <Label Text="Wind Correction Angle:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                <Entry x:Name="eCorrectionAngle"
                       Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
                       Text="{Binding WindCorrectionAngel}"
                       Placeholder=" - - - "
                       IsReadOnly="True"/>

                <Label Text="Bombsight def:" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
                <Entry x:Name="eBombsightDeflection"
                       Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                       Text="{Binding BombSightDeflection}"
                       Placeholder=" - - - "
                       IsReadOnly="True"/>
            </Grid>
        </Frame>

        <Frame>
            <Grid ColumnDefinitions="2*, 2*, 2*, 2*" RowDefinitions="Auto">
                <Label Text="Dist:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                <Entry x:Name="eDistance"
                       Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
                       Text="{Binding Distance}"
                       Placeholder=" - - - "
                       IsReadOnly="True"/>
            </Grid>
        </Frame>

        <Button Text="Distance reset"
                Margin="2"
                x:Name="btnReset"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="OnResetButtonClick"
                WidthRequest="200"
                MaximumHeightRequest="40"
                BorderWidth="3"
                BorderColor="Ivory"
                BackgroundColor="Gray"/>

        <Button Text="Back"
                Margin="2"
                x:Name="btnBack"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="OnBackButtonClick"
                WidthRequest="200"
                MaximumHeightRequest="40"
                BorderWidth="3"
                BorderColor="Ivory"
                BackgroundColor="Red"/>

    </VerticalStackLayout>
</ContentPage>
